<Window x:Class="GridTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="Grid_Selection" SelectedIndex="0" Width="70" Height="40" Grid.Row="2" Grid.Column="0" >
            <ComboBoxItem Content="16 (4x4)" />
            <ComboBoxItem Content="36 (6x6)" />
        </ComboBox>

        <Button Content="Aanpassen" Width="70" Height="40" Grid.Row="2" Grid.Column="2" Click="Grid_Aanpassen_Click"/>

        <Grid x:Name="playfield" ShowGridLines="True" Grid.Row="1" Grid.Column="1" Background="BlanchedAlmond">
            <Grid.ColumnDefinitions />
            <Grid.RowDefinitions />
        </Grid>
    </Grid>
</Window>
